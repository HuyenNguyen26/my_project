
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model QLTV_TTN.Models.ACCOUNT
<h2>Chỉnh sửa thông tin thành viên</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Quản lý</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("ID", htmlAttributes: new { @class = "control-label col-md-2",@style="color: black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.TK, new { htmlAttributes = new { @class = "form-control form-control-user", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.TK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="top:10px;">
            @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2", @style = "color: black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-user", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group" style="top:15px;">
            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2", @style = "color: black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-user", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group" style="top:20px;">
            @Html.Label("Họ Tên", htmlAttributes: new { @class = "control-label col-md-2", @style = "color: black;" })
            <div class="col-md-10" style="top:10px;">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control form-control-user", @style = "display:block;width:100%; height:34px;padding:6px 12px;color: #555;background-image: none;border: 1px solid #ccc;border-radius: 4px" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group" style="top:30px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" style="" />|
                @Html.ActionLink("Quay lại", "List")
            </div>
        </div>
    </div>
}


